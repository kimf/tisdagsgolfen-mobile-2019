{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "valid-jsdoc": 2,
    // Disable until Flow supports let and const
    "no-var": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 2,
    "react/jsx-no-undef": 2,
    "react/wrap-multilines": 2,
    "comma-dangle": [2, "never"],
    "semi": [2, "never"]
  },
  "plugins": [
    "react",
    "react-native",
    "graphql"
  ]
}
